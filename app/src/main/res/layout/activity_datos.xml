<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Datos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blanco"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/dominican" />

            <androidx.cardview.widget.CardView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                app:cardElevation="2dp"
                android:foregroundGravity="center"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="100dp"
                >
                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtNombreC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:textSize="26sp"
                android:drawableTint="@color/rojo"
                android:layout_centerInParent="true"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/cuenta"
                android:textColor="@color/negro"
                />



            <TextView
                android:id="@+id/txtLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombreC"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ubicacion"
                android:drawableTint="@color/rojo"
                android:drawablePadding="4dp"
                android:textColor="@color/negro"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLugar"
                android:layout_centerHorizontal="true"
                android:textSize="26sp"
                android:layout_marginTop="4dp"
                android:drawableTint="@color/rojo"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/calendario"
                android:textColor="@color/negro"
                />

            <TextView
                android:id="@+id/txtCedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtFecha"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textSize="26sp"
                android:drawableTint="@color/rojo"
                android:textStyle="bold"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/cedula"
                android:textColor="@color/negro"
                />

            <Button
                android:id="@+id/btnConsOtra"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@drawable/fore_bg"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:padding="4dp"
                android:text="Consultar  otra CÃ©dula"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:layout_below="@id/txtCedula"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>