<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Datos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blanco"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                app:cardElevation="2dp"
                android:foregroundGravity="center"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="60dp"
                >
                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:srcCompat="@drawable/yo" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/line0"
                android:layout_below="@id/image"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="#DADADA"
                />

            <TextView
                android:id="@+id/txtApellidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line0"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textSize="26sp"
                android:textColor="@color/negro"
                />

            <TextView
                android:id="@+id/txtNombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtApellidos"
                android:layout_centerHorizontal="true"
                android:textSize="26sp"
                android:textColor="@color/negro"
                />

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/txtNombres"
                android:orientation="vertical"
                android:background="#DADADA"
                />


            <TextView
                android:id="@+id/txtLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombres"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textSize="26sp"
                android:textColor="@color/negro"
                />

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLugar"
                android:layout_centerHorizontal="true"
                android:textSize="26sp"
                android:textColor="@color/negro"
                />

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/txtFecha"
                android:orientation="vertical"
                android:background="#DADADA"
                />

            <TextView
                android:id="@+id/txtCedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtFecha"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:textSize="26sp"
                android:textColor="@color/negro"
                />

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@id/txtCedula"
                android:orientation="vertical"
                android:background="#DADADA"
                />

            <Button
                android:id="@+id/btnConsOtra"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@drawable/fore_bg"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:padding="4dp"
                android:text="Consultar  otra CÃ©dula"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:layout_below="@id/txtCedula"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>