<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blanco"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consulta tus Datos"
                android:textColor="@color/negro"
                android:textSize="28dp"
                android:layout_marginStart="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:tint="@color/colorPrimary"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:background="#DADADA"
                />
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            >
            
            <TextView
                android:id="@+id/txtEnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduzca su cedula aquÃ­:"
                android:textColor="@color/gris_tabla"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                />
            
            <EditText
                android:id="@+id/edCedula"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtEnc"
                android:layout_centerHorizontal="true"
                android:background="@drawable/fore_bg"
                android:textSize="22sp"
                android:padding="6dp"
                android:inputType="number"
                android:textColor="@color/negro"
                android:gravity="center"
                android:hint="00000000000"
                android:maxLength="11"
                android:textColorHint="#DADADA"
                />

            <TextView
                android:id="@+id/txtInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Sitio solo de consulta)"
                android:textColor="#B6B6B6"
                android:layout_below="@id/edCedula"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
            
            <Button
                android:id="@+id/btnConfirmar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/fore_bg"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:text="Confirmar"
                android:drawableRight="@drawable/ir"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:layout_below="@id/txtInfo"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>